
#include <iostream>

using namespace std;
#define max 100
int a[max];
int top=-1;
int isfull()
{
    if(top==max-1)
    {
        return true;
    }
    else
    {
        return false;
    }
    
}
int isempty()
{
    if(top==-1)
    {
        return true;
    }
    else
    {
        return false;
    }
}
void push(int x)
{
    if(isfull())
    {
        cout<<"Stack is Full"<<endl;
    }
    else
    {
        top++;
        a[top]==x;
    }
}
void pop()
{
    if(isempty())
    {
        cout<<"Stack is Empty"<<endl;
    }
    else
    {
        top--;
    }
}
int main()
{
    int ch;
    int flag=1;
    while(flag)
    {
        cout<<"Press 1 to push the item"<<endl;
        cout<<"Press 2 to pop the item"<<endl;
        cout<<"Press 3 to terminate"<<endl;
        cin>>ch;
        switch(ch)
        {
            case 1:
            cout<<"Enter the value to be push";
            int x;
            cin>>x;
            push(x);
            break;
            case 2:
            pop();
            break;
            case 3:
            flag=0;
            break;
            default:
            cout<<"Wrong choice. Please choose the correct option";
        }
    }
}
